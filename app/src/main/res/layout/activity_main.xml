                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log"
                    android:id="@+id/ambientTemperatureLogButton"
                    android:layout_gravity="center"
                    style="@style/myLogButtonStyle"
                    android:onClick="sendThermometerLogButtonPushed" />
            </TableRow>
