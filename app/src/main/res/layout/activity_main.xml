                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TableRow>
                <TextView
                    android:text="accelerometer: "                    />
               
                <Button
                    android:id="@+id/accelerometerInfoButton"
                    style="@style/myInfoButtonStyle"
                    android:text="Info"
                    android:onClick="sendAccelerometerInfoButtonPushed" />
                <Button
                    android:id="@+id/accelerometerRunSensorButton"
                    style="@style/myRunButtonStyle"
                    android:text="Run"
                    android:onClick="sendAccelerometerRunSensorButtonPushed"/>
                <Button
                    android:id="@+id/accelerometerLogSensorButton"
                    style="@style/myLogButtonStyle"
                    android:text="Log"
                    android:onClick="sendAccelerometerLogButtonPushed"
                    android:layout_gravity="center" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="thermometer: "
                    />

                <Button
                    android:id="@+id/ambientTemperatureInfoButton"
                    style="@style/myInfoButtonStyle"

