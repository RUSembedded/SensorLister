<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
tools:context="de.rub.rus.sensorlister.RunAccelerometerSensorActivity">

<View
    android:layout_height="2dip"
    android:background="#FF909090" />
<TextView
    android:layout_width="fill_parent"
    android:text= "Data obtained from Sensor.TYPE_ACCELEROMETER:"
    android:padding="3dp"/>
<View
    android:layout_height="2dip"
    android:background="#FF909090"/>
<TableRow>
    <TextView
        android:padding="3dp"
        android:text= "sensor accuracy status:" />
    <TextView
        android:id="@+id/accelerometerAccuracy" />
    <TextView
        android:text=""
        android:layout_gravity="right"
        android:padding="3dp"/>
</TableRow>
<View
    android:layout_height="2dip"
    android:background="#FF909090" />
<TableRow>
    <TextView
        android:padding="3dp"
        android:text="a_x: "/>
    <TextView
        android:id="@+id/a_xAccelerationSensor" />
</TableRow>
<TableRow>
    <TextView
        android:padding="3dp"
        android:text="a_y: "/>
    <TextView
        android:id="@+id/a_yAccelerationSensor"/>
</TableRow>
<TableRow>
    <TextView
        android:padding="3dp"
        android:text="a_z: "/>
    <TextView
        android:id="@+id/a_zAccelerationSensor"
        android:padding="3dp"/>
</TableRow>
<View
    android:layout_height="2dip"
    android:background="#FF909090" />

</TableLayout>
